# Bringetto Trading Agent - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# ALPACA API CONFIGURATION (PAPER TRADING)
# =============================================================================
# Get your keys from: https://app.alpaca.markets -> Paper Trading -> API Keys
ALPACA_API_KEY=your_paper_api_key_here
ALPACA_SECRET_KEY=your_paper_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Market Data Feed: "sip" (real-time) or "iex" (free, limited)
# - SIP: Real-time data from all US exchanges (paid subscription or full brokerage account)
# - IEX: Free but limited (Paper Only accounts must use this)
ALPACA_DATA_FEED=sip

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
PAPER_TRADING_CAPITAL=100000.00
ENVIRONMENT=paper
TRADING_MODE=day_trading

# =============================================================================
# RISK MANAGEMENT (DO NOT EXCEED THESE LIMITS)
# =============================================================================
MAX_DAILY_LOSS_PCT=2.0
MAX_WEEKLY_LOSS_PCT=5.0
MAX_MONTHLY_DRAWDOWN_PCT=10.0
MAX_POSITION_SIZE_PCT=15.0
MAX_RISK_PER_TRADE_PCT=1.0
MAX_CONCURRENT_POSITIONS=10
MAX_TRADES_PER_DAY=30

# =============================================================================
# TRADING HOURS (Eastern Time)
# =============================================================================
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=16
MARKET_CLOSE_MINUTE=0
AVOID_FIRST_MINUTES=5
AVOID_LAST_MINUTES=5

# =============================================================================
# 24/5 EXTENDED HOURS TRADING
# =============================================================================
# Per Alpaca 24/5 trading:
# - Overnight session: 8:00 PM to 4:00 AM ET
# - Pre-market session: 4:00 AM to 9:30 AM ET
# - Regular session: 9:30 AM to 4:00 PM ET
# - After-hours session: 4:00 PM to 8:00 PM ET
#
# Important: Overnight trading only supports LIMIT orders with DAY or GTC TIF
ENABLE_EXTENDED_HOURS=true
ENABLE_OVERNIGHT_TRADING=false

# =============================================================================
# STRATEGY TOGGLES
# =============================================================================
ENABLE_ORB=true
ENABLE_VWAP_REVERSION=true
ENABLE_MOMENTUM_SCALP=true
ENABLE_GAP_AND_GO=true
ENABLE_EOD_REVERSAL=true

# =============================================================================
# MACHINE LEARNING & OPTIMIZATION
# =============================================================================
ENABLE_ML_LEARNING=true
ENABLE_AUTO_DISABLE=true
ENABLE_AB_TESTING=true

# =============================================================================
# DYNAMIC SYMBOL SCANNER
# =============================================================================
# When enabled, discovers tradeable symbols from Alpaca's full US equity universe
# instead of using the hardcoded SP500 list. Runs pre-market each day.
ENABLE_SYMBOL_SCANNER=true
SCANNER_MIN_PRICE=5.0
SCANNER_MIN_AVG_VOLUME=1000000
SCANNER_LOOKBACK_DAYS=5
SCANNER_MAX_SYMBOLS=1000
SCANNER_RESCAN_INTERVAL_MINUTES=60

# =============================================================================
# DATABASE
# =============================================================================
# For local development:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_agent
# For Railway (auto-set):
# DATABASE_URL=postgresql://...

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_SECRET_KEY=change_this_to_a_random_secret_key
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# ALERTS (Optional)
# =============================================================================
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_TO=
SEND_TRADE_ALERTS=true
SEND_DAILY_SUMMARY=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
