{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && python -c \"print('Build complete')\"",
    "watchPatterns": ["agent/**", "requirements.txt", "pyproject.toml"]
  },
  "deploy": {
    "startCommand": "python -m agent.main & uvicorn agent.api.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "numReplicas": 1
  }
}
